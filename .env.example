# WaterFilterNet Environment Variables Example
# Copy this file to .env and fill in your actual values

# Stripe API Keys (Development)
STRIPE_PUBLISHABLE_KEY_WEB=pk_test_your_web_publishable_key_here
STRIPE_PUBLISHABLE_KEY_MOBILE=pk_test_your_mobile_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Live Keys (Production)
STRIPE_LIVE_PUBLISHABLE_KEY_WEB=pk_live_your_live_web_key_here
STRIPE_LIVE_PUBLISHABLE_KEY_MOBILE=pk_live_your_live_mobile_key_here
STRIPE_LIVE_SECRET_KEY=sk_live_your_live_secret_key_here

# WooCommerce API (Optional)
WOOCOMMERCE_URL=https://your-store.com/wp-json/wc/v3
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here

# Firebase API Keys (automatically extracted from firebase_options.dart)
FIREBASE_API_KEY_WEB=your_firebase_web_api_key_here
FIREBASE_API_KEY_ANDROID=your_firebase_android_api_key_here
FIREBASE_API_KEY_IOS=your_firebase_ios_api_key_here

# Other API Keys (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here

# App Configuration
APP_NAME=WaterFilterNet
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@waterfilternet.com
BASE_URL=https://your-api-domain.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true

# Demo Mode (for testing without Stripe configuration)
FORCE_DEMO_MODE=false

# Business Configuration
FREE_SHIPPING_THRESHOLD=75.0
DEFAULT_CURRENCY=EUR
DEFAULT_COUNTRY=CY